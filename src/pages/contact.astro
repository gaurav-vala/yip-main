---
import Layout from "../layouts/Layout.astro";
---

<Layout pageTitle="Contact | Young India Publications">
  <section class="bg-gray-100 py-12 px-6 md:px-16 lg:px-24">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-gray-900">📞 Contact Us</h2>
      <p class="mt-2 text-gray-600">
        Have a question or want to collaborate? Reach out to us!
      </p>
    </div>

    <div class="mt-8 max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-md">
      <form class="space-y-4">
        <div>
          <label class="block text-gray-700 font-medium">Your Name</label>
          <input
            type="text"
            name="name"
            required
            class="w-full px-4 py-2 mt-2 border rounded-lg focus:ring focus:ring-blue-300"
          />
        </div>

        <div>
          <label class="block text-gray-700 font-medium">Email Address</label>
          <input
            type="email"
            name="email"
            required
            class="w-full px-4 py-2 mt-2 border rounded-lg focus:ring focus:ring-blue-300"
          />
        </div>

        <div>
          <label class="block text-gray-700 font-medium">Your Message</label>
          <textarea
            name="message"
            rows="4"
            required
            class="w-full px-4 py-2 mt-2 border rounded-lg focus:ring focus:ring-blue-300"
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition"
        >
          Send Message
        </button>
      </form>
    </div>

    <div class="mt-8 text-center">
      <p class="text-gray-600">
        📧 Email: <a
          href="mailto:your-email@example.com"
          class="text-blue-600 hover:underline">your-email@example.com</a>
      </p>
      <p class="text-gray-600">📍 Address: Your Office Address</p>
      <p class="text-gray-600">📞 Phone: Your Contact Number</p>
    </div>
  </section>
</Layout>
